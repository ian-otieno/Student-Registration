@page
@model KHSchool.Pages.Registrations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Details</h1>

<h4> Student Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.ID" />
            <div class="form-group">
                <label asp-for="Registration.FirstName" class="control-label"></label>
                <input asp-for="Registration.FirstName" class="form-control" />
                <span asp-validation-for="Registration.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.SecondName" class="control-label"></label>
                <input asp-for="Registration.SecondName" class="form-control" />
                <span asp-validation-for="Registration.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.AdmissionNumber" class="control-label"></label>
                <input asp-for="Registration.AdmissionNumber" class="form-control" />
                <span asp-validation-for="Registration.AdmissionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.StreamName" class="control-label"></label>
                <input asp-for="Registration.StreamName" class="form-control" />
                <span asp-validation-for="Registration.StreamName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:5px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
