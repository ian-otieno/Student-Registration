@page
@model KHSchool.Pages.Registrations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Fill in the table below to update student details</h4>

<p>
    <a asp-page="Create">Create New Student Registration</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].AdmissionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].StreamName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Registration) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreamName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
